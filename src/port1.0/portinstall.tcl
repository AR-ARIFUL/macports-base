PortTarget 1.0

name		org.opendarwin.install
runtype		always
requires	destroot
provides	install

# define options
options install.target install.destroot build.target.install 
commands install

# Set defaults
default install.dir {[option build.dir]}
default install.cmd {[option build.cmd]}
default install.pre_args {[option install.target]}
default install.target install
default install.post_args {[option install.destroot]}
default install.destroot {DESTDIR=[option destroot]}

proc main {args} {
    system "[command install]"
    return 0
}

